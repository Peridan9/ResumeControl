# ResumeControl Environment Variables
# Copy this file to .env and update with your actual values

# Common
PORT=8080
ENV=development

# Database connection
# Format: postgres://username:password@host:port/database?sslmode=disable
# Using DATABASE_URL for consistency across local/Docker/RDS
DATABASE_URL=postgres://username:password@localhost:5432/resumecontrol?sslmode=disable
DB_URL=postgres://username:password@localhost:5432/resumecontrol?sslmode=disable

# Clerk (Required for Auth)
# Get from Clerk Dashboard: API Keys
CLERK_SECRET_KEY=sk_test_...
VITE_CLERK_PUBLISHABLE_KEY=pk_test_...

